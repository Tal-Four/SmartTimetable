CREATE TABLE category (`CategoryID` SMALLINT NOT NULL, `UserID` SMALLINT NOT NULL, `Name` VARCHAR(15) NOT NULL, `Modifier` FLOAT DEFAULT 1  NOT NULL, `TasksCompleted` INT DEFAULT 0  NOT NULL, PRIMARY KEY (`CategoryID`, `UserID`));
CREATE TABLE event (`EventID` SMALLINT NOT NULL, `UserID` SMALLINT NOT NULL, `EventName` VARCHAR(20) NOT NULL, `Description` VARCHAR, `Day` INT NOT NULL, `Colour` INT NOT NULL, `StartTime` FLOAT NOT NULL, `EndTime` FLOAT NOT NULL, PRIMARY KEY (`EventID`, `UserID`));
CREATE TABLE task (`TaskID` SMALLINT NOT NULL, `UserID` SMALLINT NOT NULL, `Name` VARCHAR(20) NOT NULL, `Description` VARCHAR, `CategoryID` SMALLINT NOT NULL, `DateSet` DATE NOT NULL, `DateDue` DATE, `Colour` INT, `TimeSet` FLOAT NOT NULL, `TimeModified` FLOAT NOT NULL, `TimeUsed` FLOAT DEFAULT 0  NOT NULL, PRIMARY KEY (`TaskID`, `UserID`));
CREATE TABLE `user` (`UserID` SMALLINT NOT NULL, `Username` VARCHAR(15) NOT NULL, `Password` VARCHAR(15), PRIMARY KEY (`UserID`));